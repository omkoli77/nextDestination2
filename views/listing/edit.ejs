<% layout("/layouts/boilerplate.ejs") %>
<body>
    <form method="post" action="/listings/<%= listing._id %>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="col-8 offset-2">
            <h1>Edit your listing</h1>
        <div class="mb-3">
            <label for="title" class="form-label">Title:- </label>
            <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" required>
            <div class="invalid-feedback">
               Please choose a title.
            </div>
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description:- </label>
            <input type="text" name="listing[description]" id="description" value="<%= listing.description %>" class="form-control" required>
            <div class="invalid-feedback">
                Description is required
            </div>
        </div>

         <div class="mb-3">
           <img src="<%= imgUrl %>" alt="">
        </div>
        
        <div class="mb-3">
            <label for="url" class="form-label">Image:- </label>
            <input type="file" name="listing[url]" id="url" value="<%= listing.image.url %>" class="form-control" >
        </div>
     
        <div class="row">
        <div class="mb-3 col">
            <label for="price" class="form-label">Price:- </label>
            <input type="text" name="listing[price]" id="price" value="<%= listing.price %>" class="form-control" required>
            <div class="invalid-feedback">
                Please enter a valid price.
            </div>
        </div>
        
        <div class="mb-3 col">
            <label for="location" class="form-label">Location:- </label>
            <input type="text" name="listing[location]" id="location" value="<%= listing.location %>" class="form-control" required>
             <div class="invalid-feedback">
                Location is required
            </div>
        </div>  
        </div>  
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" id="country" value="<%= listing.country %>" class="form-control" required>
            <div class="invalid-feedback">
                Country is required
            </div>
        </div>

        <div class="mb-3 ">
            <label for="Category" class="form-label">Category</label>
            <select name="listing[category]" id="Category" class="form-control" placeholder="ok">
                <option value="<%= listing.category %>">Choose Option</option>
                <option value="trending">Trending</option>
                <option value="rooms">Rooms</option>
                <option value="iconic city">Iconic city</option>
                <option value="mountain">Mountain</option>
                <option value="castle">Castle</option>
                <option value="amazing poll">Amazing poll</option>
                <option value="camping">Camping</option>
                <option value="farms">Farm</option>
                <option value="arctic">Arctic</option>
            </select>
            <div class="invalid-feedback">
                Category is required
            </div>
        </div>

        <button class="btn btn-success">Submit</button>
        <br>
        </div>
    </form>
</body>
